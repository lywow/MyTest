<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_shopping_mall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shopping_mall_main">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:layout_below="@+id/iv_shopping_mall_top"
        android:foregroundGravity="center"
        android:layout_marginTop="35dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_piaodai" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="@drawable/img_shopping_mall_roof" />

    <RelativeLayout
        android:id="@+id/iv_shopping_mall_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_shopping_mall_top" >

        <ImageView
            android:id="@+id/iv_shopping_mall_return_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/icon_shopping_mall_return_button" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:layout_marginStart="0dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_shopping_mall_return_button"
            android:src="@drawable/img_shopping_mall_title" />

        <ImageView
            android:id="@+id/iv_shopping_mall_wallet"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignStart="@+id/iv_shopping_mall_wallet_tag"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/bg_shopping_mall_wallet" />

        <ImageView
            android:id="@+id/iv_shopping_mall_wallet_tag"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-5dp"
            android:layout_toStartOf="@+id/tv_wallet_number"
            android:background="@drawable/icon_shopping_mall_wallet_tag" />

        <TextView
            android:id="@+id/tv_wallet_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/iv_shopping_mall_wallet"
            android:layout_alignBottom="@+id/iv_shopping_mall_wallet"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:textColor="#fff6a9"
            android:textStyle="bold"
            android:text="12345ä¸¤"
            android:textSize="19sp" />

    </RelativeLayout>

</RelativeLayout>